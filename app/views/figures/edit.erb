<h2>Edit <%= @figure.name %></h2>
<form method="post" action="/figures/<%= @figure.id %>">
	<input type="hidden" name="_method" value="patch">
	<label>Name:</label>
	<input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
	<br></br>
	<label>Edit Landmark</label>
	<% Landmark.all.each do |landmark| %>
	<%= landmark.name %>
	<input type="checkbox" id="<%= landmark.name%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark)%>>
	<% end %>
	<br></br>
	<label>Create New Landmark:</label>
	<input type="text" id="new_landmark" name="landmark[name]">
	<label>Year Completed</label>
	<input type="text" name="landmark[year_complete]">

	<br></br>

	<label>Edit Title</label>
	<% Title.all.each do |title| %>
	<%= title.name %>
	<input type="checkbox" id="<%= title.name %>" name="figure[title_ids][]" value="<%= title.id %>"<%='checked' if @figure.titles.include?(title)%>>
	<% end %>
	<br></br>
	<label>Add New Title</label>
	<input type="text" name="title[name]">

	<input type="submit" value="Edit Figure">
</form>